{% extends 'admin_pages/base.html.twig' %}

{% block title %}添加字段{% endblock %}


{% block subHeader %}
    <div class="m-subheader ">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h3 class="m-subheader__title ">添加字段</h3>
            </div>
        </div>
    </div>
{% endblock %}


{% block content %}

    <div class="col-md-12">
        <!--begin::Portlet-->
        <div class="m-portlet m-portlet--tab">
            <!--begin::Form-->
            <form class="m-form m-form--fit m-form--label-align-right" method="post"
                  action={{ path("field_type_entity_addfield_action", {'contentType': contentType}) }} >
                <div class="m-portlet__body">
                    <div class="fields_wrapper">
                        <div class="form-group m-form__group">
                            <label for="newContentTypeFieldSelect_1">选择字段类型</label>
                            <select class="form-control m-input m-input--pill newContentTypeFieldSelect"
                                    id="newContentTypeFieldSelect" name="fieldValueId" required="required">
                                <option value="" selected="selected">- 选择一个字段类型 -</option>
                            </select>
                            <div class="m--margin-top-10">
                                <label>字段名称：</label>
                                <input type="text" class="m-input" name="fieldName" required="required">
                                <label>机读名称：</label>  field_
                                <input type="text" class="m-input" id="fieldMachineAlias" name="fieldMachineAlias" required="required">
                                <label id="fieldMachineAliasLabel"></label>
                            </div>
                            <div class="m--margin-top-10 desc_for_content">
                                <label>字段描述：</label>
                                <textarea class="form-control m-input" rows="3" name="fieldDescription"></textarea>
                                <span class="m-form__help">简短说明下此字段类型的主要功能。</span>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="m-portlet__foot m-portlet__foot--fit">
                    <div class="m-form__actions">
                        <button id="addNewContentTypeButton" class="btn btn-primary">确定</button>
                    </div>
                </div>
            </form>

            <!--end::Form-->
        </div>

        <!--end::Portlet-->

    </div>

{% endblock %}



{# 当前页面需要的js代码 #}
{% block custom_javascripts %}
    <script src="{{ asset('assets/inchTimeJs/addNewField.js') }}" type="text/javascript"></script>
{% endblock %}
{% extends 'admin_pages/base.html.twig' %}

{% block title %}权限列表{% endblock %}

{% block subHeader %}
    <div class="m-subheader ">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h3 class="m-subheader__title ">权限列表</h3>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <form action="{{ path('object_permission_entity_add1') }}" method="post">
        <table class="table">
            <thead>
            <tr>
                <th>权限名称</th>
                <th>允许查看</th>
                <th>允许创建</th>
                <th>允许编辑</th>
                <th>允许删除</th>
            </tr>
            </thead>
            <tbody>

            {#//内容类型的权限：内容类型是否可以添加 修改 删除，#}
            <tr>
                <td>内容类型<input type="hidden" name="contentTypeEntity[Object]"></td>
                <td><input type="checkbox" checked="checked" name="contentTypeEntity[view]">查看</td>
                <td><input type="checkbox" checked="checked" name="contentTypeEntity[new]">创建</td>
                <td><input type="checkbox" checked="checked" name="contentTypeEntity[edit]">编辑</td>
                <td><input type="checkbox" checked="checked" name="contentTypeEntity[delete]">删除</td>
            </tr>
            {#每个类型的内容是否可以 添加 修改 删除#}
            {% for contentTypeEntity in contentTypeEntitys %}
                <tr>
                    <td>内容类型:{{ contentTypeEntity.contentTypeName }} <input type="hidden" name="contentTypeEntity[{{ contentTypeEntity.contentTypeMachineAlias }}][Object]"></td>
                    <td><input type="checkbox" checked="checked" name="contentTypeEntity[{{ contentTypeEntity.contentTypeMachineAlias }}][view]">查看</td>
                    <td><input type="checkbox" checked="checked" name="contentTypeEntity[{{ contentTypeEntity.contentTypeMachineAlias }}][new]">创建</td>
                    <td><input type="checkbox" checked="checked" name="contentTypeEntity[{{ contentTypeEntity.contentTypeMachineAlias }}][edit]">编辑</td>
                    <td><input type="checkbox" checked="checked" name="contentTypeEntity[{{ contentTypeEntity.contentTypeMachineAlias }}][delete]">删除</td>
                </tr>
            {% endfor %}


            {#//分类标签类型的权限：标签权限是否可以查看 添加 修改 删除#}
            <tr>
                <td>分类标签类型<input type="hidden" name="taxonomyTypeEntity[Object]"></td>
                <td><input type="checkbox" checked="checked" name="taxonomyTypeEntity[view]">查看</td>
                <td><input type="checkbox" checked="checked" name="taxonomyTypeEntity[new]">创建</td>
                <td><input type="checkbox" checked="checked" name="taxonomyTypeEntity[edit]">编辑</td>
                <td><input type="checkbox" checked="checked" name="taxonomyTypeEntity[delete]">删除</td>
            </tr>
            {#每个类型的分类标签是否可以 添加 修改 删除#}
            {% for taxonomyTypeEntity in taxonomyTypes %}
                <tr>
                    <td>分类标签类型:{{ taxonomyTypeEntity.taxonomyName }} <input type="hidden" name="taxonomyTypeEntity[{{ taxonomyTypeEntity.taxonomyAlias }}][Object]"></td>
                    <td><input type="checkbox" checked="checked" name="taxonomyTypeEntity[{{ taxonomyTypeEntity.taxonomyAlias }}][view]">查看</td>
                    <td><input type="checkbox" checked="checked" name="taxonomyTypeEntity[{{ taxonomyTypeEntity.taxonomyAlias }}][new]">创建</td>
                    <td><input type="checkbox" checked="checked" name="taxonomyTypeEntity[{{ taxonomyTypeEntity.taxonomyAlias }}][edit]">编辑</td>
                    <td><input type="checkbox" checked="checked" name="taxonomyTypeEntity[{{ taxonomyTypeEntity.taxonomyAlias }}][delete]">删除</td>
                </tr>
            {% endfor %}

            {#//内容类型的权限：内容类型是否可以添加 修改 删除，#}
            <tr>
                <td>商品类型<input type="hidden" name="productTypeEntity[Object]"></td>
                <td><input type="checkbox" checked="checked" name="productTypeEntity[view]">查看</td>
                <td><input type="checkbox" checked="checked" name="productTypeEntity[new]">创建</td>
                <td><input type="checkbox" checked="checked" name="productTypeEntity[edit]">编辑</td>
                <td><input type="checkbox" checked="checked" name="productTypeEntity[delete]">删除</td>
            </tr>

            {#订单管理的权限：是否可以 查看  删除，#}
            <tr>
                <td>订单管理<input type="hidden" name="orderEntity[Object]"></td>
                <td><input type="checkbox" checked="checked" name="orderEntity[view]">查看</td>
                <td></td>
                <td><input type="checkbox" checked="checked" name="orderEntity[edit]">编辑</td>
                <td></td>
            </tr>

            <tr>
                <td>菜单管理<input type="hidden" name="menuEntity[Object]"></td>
                <td><input type="checkbox" checked="checked" name="menuEntity[view]">查看</td>
                <td><input type="checkbox" checked="checked" name="menuEntity[new]">创建</td>
                <td><input type="checkbox" checked="checked" name="menuEntity[edit]">编辑</td>
                <td><input type="checkbox" checked="checked" name="menuEntity[delete]">删除</td>
            </tr>

            <tr>
                <td>用户管理<input type="hidden" name="userEntity[Object]"></td>
                <td><input type="checkbox" name="userEntity[view]">查看</td>
                <td><input type="checkbox" name="userEntity[new]">创建</td>
                <td><input type="checkbox" name="userEntity[edit]">编辑</td>
                <td><input type="checkbox" name="userEntity[delete]">删除</td>
            </tr>

            <tr>
                <td>用户权限<input type="hidden" name="userGroupEntity[Object]"></td>
                <td><input type="checkbox" name="userGroupEntity[view]">查看</td>
                <td><input type="checkbox" name="userGroupEntity[new]">创建</td>
                <td><input type="checkbox" name="userGroupEntity[edit]">编辑</td>
                <td><input type="checkbox" name="userGroupEntity[delete]">删除</td>
            </tr>

            <tr>
                <td>系统设置<input type="hidden" name="userGroupEntity[Object]"></td>
                <td><input type="checkbox" name="userGroupEntity[view]">查看</td>
                <td><input type="checkbox" name="userGroupEntity[edit]">编辑</td>
            </tr>

            </tbody>
        </table>
        <div class="col-6">

            {#<input type="hidden" name="userPermissionGroupEntityId" value="{{ userPermissionGroupEntityId }}">#}
            <input type="hidden" name="_token" value="{{ csrf_token("user_permission") }}">
            <button type="button" id="check_all" class="btn btn-sm btn-primary">全选</button>
            <button type="submit" class="btn btn-sm btn-primary">提交</button>
        </div>
    </form>
{% endblock %}

{% block custom_javascripts %}
    <script type="text/javascript">
        $(document).ready(function(){
            $("#check_all").on("click",function(e){
                $("input[type=checkbox]").attr("checked","checked");
            });
        });
    </script>
{% endblock %}